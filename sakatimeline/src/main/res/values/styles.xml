<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--timelinewview通用的属性-->
    <declare-styleable name="TimeLineView">
        <attr name="timePadding" format="dimension" />
        <attr name="timeDrawable" format="color|reference" />
        <attr name="timeStrokeWidth" format="dimension" />
        <attr name="timeStrokeColor" format="color" />
        <attr name="strokeType" format="enum">
            <enum name="normal" value="0" />
            <enum name="noEndPoint" value="1" />
        </attr>
        <attr name="timeLineType" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />
        </attr>


    </declare-styleable>

    <!--timelineview中序号的属性-->
    <declare-styleable name="IndexText">
        <attr name="timeIndexColor" format="color" />
        <attr name="timeIndexSize" format="dimension" />
    </declare-styleable>

    <!--stepviewdivider的属性-->
    <declare-styleable name="StepViewDivider">
        <attr name="stepShowOrder" format="boolean" />
        <attr name="stepPreColor" format="color" />
        <attr name="stepAfterColor" format="color" />
    </declare-styleable>


    <declare-styleable name="TimeLineViewProxy">
        <attr name="visibleProxy" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
        <attr name="backgroundProxy" />
        <attr name="clickProxy" format="boolean" />
    </declare-styleable>


    <style name="DefaultViewAttr">
        <item name="visibleProxy">visible</item>
        <item name="backgroundProxy">@drawable/drawable_null</item>
        <item name="clickProxy">true</item>
    </style>
</resources>