<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StepView1">
        <item name="timePadding">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="visibleProxy">visible</item>
    </style>

    <style name="StepView2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundProxy">@color/white</item>
        <item name="visibleProxy">invisible</item>
    </style>

    <style name="StepView3">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/teal</item>
        <item name="backgroundProxy">@drawable/bg_rect</item>
        <item name="visibleProxy">visible</item>
    </style>
</resources>
